<main class="container containers">

  <div class="row">
    <form class="col s12 m6 offset-m3" id="signin-form" name="signin-form" method="post" action="/signin">
      <div class="row">
        <div class="input-field col s12">
          <input id="email" name="email" type="email" class="validate" required>
          <label for="email">Email Address</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" name="password" type="password" class="validate" required>
          <label for="password">Password</label>
        </div>
      </div>
      <input class="btn waves-effect waves-light" type="submit" value="Sign In" />
    </form>
  </div>
  <div class="row">
    <div class="col s12 m6 offset-m3">
      {{#if message}}
        <blockquote class="flash-messages">
          {{message}}
        </blockquote>
      {{/if}}
    </div>
  </div>
</main>
